{
    "name": "bupy7/zf-form",
    "description": "The simplest form for Laminas.",
    "version": "2.0.0",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "form",
        "zf",
        "zf3",
        "zend framework",
        "zend framework 3",
        "laminas"
    ],
    "authors": [
        {
            "name": "Vasily Belosloodcev",
            "email": "vasily.belosloodcev@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "bupy7/php-html-form": "~1.0",
        "laminas/laminas-view": "^2.8",
        "laminas/laminas-modulemanager": "^2.7.2",
        "laminas/laminas-servicemanager": "^3.1",
        "laminas/laminas-validator": "^2.8",
        "laminas/laminas-inputfilter": "^2.7.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.5 <6.0.0",
        "satooshi/php-coveralls": "^1.0.1",
        "laminas/laminas-test": "^3.0.1",
        "friendsofphp/php-cs-fixer": "^2.16.1"
    },
    "autoload": {
        "psr-4": {
            "Bupy7\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bupy7\\Form\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --debug",
        "fix": "./vendor/bin/php-cs-fixer fix --config=./phpcs.php"
    }
}
